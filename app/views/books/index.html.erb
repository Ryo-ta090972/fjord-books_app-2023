<p style="color: green"><%= notice %></p>

<h1><%= t('book.table') %></h1>
<%= paginate @books %>
<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('common.show'), book %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t('common.add'), new_book_path %>
</nav>
