<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<div class="show-item">
  <%= render @book %>
</div>

<% @comments.each do |comment| %>
  <% unless comment.user_id.nil? || comment.text.blank? %>
    <p><%= comment.user.name.blank? ? comment.user.email : comment.user.name %></p>
    <p><%= comment.created_at %></p>
    <p><%= comment.text %></p>
  <% end %>
<% end %>

<%= form_with(model: @comment) do |form| %>
  <div>
    <%= form.hidden_field :commentable_type, value: @comment.commentable_type %>
    <%= form.hidden_field :commentable_id, value: @comment.commentable_id %>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_field :text %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<nav class="page-nav">
  <%= link_to t('views.common.edit', name: Book.model_name.human.downcase), edit_book_path(@book) %> |
  <%= link_to t('views.common.back', name: i18n_pluralize(Book.model_name.human.downcase)), books_path %>

  <%= button_to t('views.common.destroy', name: Book.model_name.human.downcase), @book, method: :delete %>
</nav>
